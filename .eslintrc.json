{
  "extends": ["plugin:tailwindcss/recommended"],
  "plugins": ["tailwindcss"],
  "rules": {
    "tailwindcss/classnames-order": "on"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:tailwindcss/recommended"],
      "rules": {
        "tailwindcss/classnames-order": 1
      }
    }
  ]
}
